datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        Int     @id @default(autoincrement())
  title     String
  description   String?
  is_completed Boolean @default(false)
  created_at  DateTime @default(now())
  updated_at   DateTime @updatedAt
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}